<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog

        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="wizards" dbms="postgresql">

        <createTable tableName="users">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="firstName" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="lastName" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="varchar">
              <constraints nullable="false"/>
            </column>
        </createTable>


        <createTable tableName="items">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="itemName" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="itemDescription" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="buyerId" type="int" defaultValue="NULL">
                <constraints foreignKeyName="fk_item_buyer" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="sellerId" type="int">
                <constraints foreignKeyName="fk_item_seller" nullable="false" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="auctionStartTime" type="timestamp" defaultValue="now()">
                <constraints nullable="false"/>
            </column>
            <column name="auctionEndTime" type="timestamp" defaultValue="NULL"/>
            <column name="minBidAmount" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>


        <createTable tableName="bids">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="bidderId" type="int">
                <constraints foreignKeyName="fk_bids_bidder" nullable="false" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="itemId" type="int">
                <constraints foreignKeyName="fk_bids_itemId" nullable="false" referencedTableName="items" referencedColumnNames="id"/>
            </column>
            <column name="bidTime" type="timestamp" defaultValue="now()">
                <constraints nullable="false"/>
            </column>
            <column name="bidAmount" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>


        <createTable tableName="feedback">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="userId" type="int">
                <constraints foreignKeyName="fk_feedback_userId" nullable="false" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="rating" type="smallint">
                <constraints nullable="false"/>
            </column>
            <column name="feedbackDescription" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="timestamp" defaultValue="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>


</databaseChangeLog>
